@model NewReminderASP.Domain.Entities.Address

@{
    ViewBag.Title = "Address Details";
}

<style>
    
    .address-details {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        max-width: 600px;
    }

        .address-details h2 {
            color: #333;
        }

        .address-details dl {
            display: flex;
            flex-wrap: wrap;
            margin: 0;
            padding: 0;
        }

        .address-details dt {
            flex: 1 1 30%;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .address-details dd {
            flex: 1 1 70%;
            margin-bottom: 5px;
        }

        .address-details hr {
            border: 0;
            border-top: 1px solid #ddd;
            margin: 15px 0;
        }

        .address-details a {
            color: #007bff;
            text-decoration: none;
            margin-right: 10px;
        }
</style>

<div class="address-details">
    <h2>Address Details</h2>

    <div>
        <h4>Address: @Model.Login</h4>
        <hr />
        <dl>
            <dt>@Html.DisplayNameFor(model => model.Street)</dt>
            <dd>@Html.DisplayFor(model => model.Street)</dd>

            <dt>@Html.DisplayNameFor(model => model.City)</dt>
            <dd>@Html.DisplayFor(model => model.City)</dd>

            <dt>@Html.DisplayNameFor(model => model.CountryName)</dt>
            <dd>@Html.DisplayFor(model => model.CountryName)</dd>

            <dt>@Html.DisplayNameFor(model => model.PostalCode)</dt>
            <dd>@Html.DisplayFor(model => model.PostalCode)</dd>

            <dt>@Html.DisplayNameFor(model => model.Description)</dt>
            <dd>@Html.DisplayFor(model => model.Description)</dd>
        </dl>
    </div>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.ID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
@model NewReminderASP.Domain.Entities.EventType

@{
    ViewBag.Title = "Event Type";
}

<style>

    .eventType-details {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        max-width: 600px;
    }

        .eventType-details h2 {
            color: #333;
        }

        .eventType-details dl {
            display: flex;
            flex-wrap: wrap;
            margin: 0;
            padding: 0;
        }

        .eventType-details dt {
            flex: 1 1 30%;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .eventType-details dd {
            flex: 1 1 70%;
            margin-bottom: 5px;
        }

        .eventType-details hr {
            border: 0;
            border-top: 1px solid #ddd;
            margin: 15px 0;
        }

        .eventType-details a {
            color: #007bff;
            text-decoration: none;
            margin-right: 10px;
        }
    .btn-group {
        text-align: center;
    }

        .btn-group .btn {
            color: #ffffff;
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-group .btn:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
</style>


<h2>Event Type</h2>

<div class="eventType-details">
    <h4>Event Type: @Model.TypeName</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.TypeName)</dt>
        <dd>@Html.DisplayFor(model => model.TypeName)</dd>


    </dl>
</div>


<div class="btn-group" role="group" aria-label="User actions">
    @Html.ActionLink("Edit", "EditEventTypes", new { id = Model.ID }, new { @class = "btn " })
    @Html.ActionLink("Delete", "DeleteEventType", new { id = Model.ID }, new { @class = "btn " })
    @Html.ActionLink("Back to List", "GetEventTypes", null, new { @class = "btn " })
</div>
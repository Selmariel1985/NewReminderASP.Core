@{
    // Set the layout for the page
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <header style="background-color: #2980b9; color: #fff; padding: 20px; text-align: center;">
        <h1>Welcome to Our Platform</h1>
        <p>Ready to Dive In or Check Out Our Demo?</p>
        <div class="action-buttons" style="text-align: center; margin-top: 20px;">
            @Html.ActionLink("Join Now", "Login", "Login", new { area = "LoginArea" }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Registration", "Register", "Register", new { area = "RegisterArea" }, new { @class = "btn btn-success" })
        </div>
    </header>
    <div class="container" style="max-width: 800px; margin: 0 auto; padding: 20px;">
        <div class="demo-link" style="text-align: center; margin-top: 20px;">
            <a href=@Url.Action("IndexAnon", "Event", new { area = "EventsArea" }) style="text-decoration: underline; color: #2980b9; font-size: 18px; font-weight: bold;">Explore Our Demo Now</a>
        </div>
    </div>
</main>
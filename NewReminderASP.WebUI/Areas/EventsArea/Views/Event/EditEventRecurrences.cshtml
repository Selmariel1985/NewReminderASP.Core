@model NewReminderASP.Domain.Entities.EventRecurrence


@{
    ViewBag.Title = "Edit Event Recurrence";
}

<link href="~/styles.css" rel="stylesheet"/>

<div class="edit-container">
    <h2>Edit Event Recurrence</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.RecurrenceType, new { @class = "edit-control-label" })
            @Html.EditorFor(model => model.RecurrenceType, new { htmlAttributes = new { @class = "edit-form-control" } })
            @Html.ValidationMessageFor(model => model.RecurrenceType, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-save">Save</button>
        </div>
    }
</div>

<div class="row mt-2">
    <div class="col-md-6">
        @Html.ActionLink("Back to List", "GetEventRecurrences", null, new { @class = "btn-back" })
    </div>
</div>
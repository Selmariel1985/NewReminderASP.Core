@model NewReminderASP.Domain.Entities.EventDetail

@{
    ViewBag.Title = "Event Detail";
}

<link href="~/styles.css" rel="stylesheet"/>
<div class="delete-container">
    <h2>Delete Event Detail</h2>

    <p>Are you sure you want to delete this country?</p>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.EventID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EventID)
        </dd>
    </dl>

    @using (Html.BeginForm("DetailsEventDetails", "Event", new { id = Model.EventID }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this Event detail?');"/>

        </div>
    }
</div>
<div class="row mt-2">
    <div class="col-md-6">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
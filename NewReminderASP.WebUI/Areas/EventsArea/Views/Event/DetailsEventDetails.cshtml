@model NewReminderASP.Domain.Entities.EventDetail

@{
    ViewBag.Title = "Event Detail";
}

<link href="~/styles.css" rel="stylesheet" />


<h2>Event Detail</h2>

<div class="details-details">
    <h4>Event Detail: @Model.EventID</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.EventID)</dt>
        <dd>@Html.DisplayFor(model => model.EventID)</dd>
        <dt>@Html.DisplayNameFor(model => model.Description)</dt>
        <dd>@Html.DisplayFor(model => model.Description)</dd>
        <dt>@Html.DisplayNameFor(model => model.Status)</dt>
        <dd>@Html.DisplayFor(model => model.Status)</dd>

    </dl>


    <div class="btn-group" role="group" aria-label="User actions">
        @Html.ActionLink("Edit", "EditEventDetails", new { id = Model.EventID }, new { @class = "btn " })
        @Html.ActionLink("Delete", "DeleteEventDetail", new { id = Model.EventID }, new { @class = "btn " })
        @Html.ActionLink("Back to List", "GetEventDetails", null, new { @class = "btn " })
    </div>
</div>

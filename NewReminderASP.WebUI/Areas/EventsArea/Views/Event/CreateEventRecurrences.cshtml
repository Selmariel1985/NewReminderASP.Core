@model NewReminderASP.Domain.Entities.EventRecurrence
@{
    ViewBag.Title = "Create Event Recurrence";
}

<link href="~/styles.css" rel="stylesheet"/>

<div class="create-form">
    <h2>Add Event Recurrence</h2>

    @using (Html.BeginForm("CreateEventRecurrences", "Event", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()


        <div class="form-group">
            @Html.LabelFor(model => model.RecurrenceType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RecurrenceType, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Your Recurrence Type" } })
                @Html.ValidationMessageFor(model => model.RecurrenceType, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Create Event Recurrence</button>
            </div>
        </div>
    }
</div>

<div class="row mt-2">
    <div class="col-md-6">
        @Html.ActionLink("Back to List", "GetEventRecurrences", null, new { @class = "btn btn-secondary" })
    </div>
</div>
@model NewReminderASP.Domain.Entities.Event
@{
    ViewBag.Title = "Event Details";
}

<style>
    .event-details {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        max-width: 600px;
    }

        .event-details h2 {
            color: #333;
        }

        .event-details dl {
            display: flex;
            flex-wrap: wrap;
            margin: 0;
            padding: 0;
        }

        .event-details dt {
            flex: 1 1 30%;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .event-details dd {
            flex: 1 1 70%;
            margin-bottom: 5px;
        }

        .event-details hr {
            border: 0;
            border-top: 1px solid #ddd;
            margin: 15px 0;
        }

        .event-details a {
            color: #007bff;
            text-decoration: none;
            margin-right: 10px;
        }
    .btn-group {
        text-align: center;
    }

        .btn-group .btn {
            color: #ffffff;
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-group .btn:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
</style>

<h2>Event Details</h2>

<div class="event-details">
    <h4>User : @Model.Login</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.EventTypes)</dt>
        <dd>@Html.DisplayFor(model => model.EventTypes)</dd>
        <dt>@Html.DisplayNameFor(model => model.Title)</dt>
        <dd>@Html.DisplayFor(model => model.Title)</dd>
        <dt>@Html.DisplayNameFor(model => model.Date)</dt>
        <dd>@Html.DisplayFor(model => model.Date)</dd>
        <dt>@Html.DisplayNameFor(model => model.Time)</dt>
        <dd>@Html.DisplayFor(model => model.Time)</dd>
        <dt>@Html.DisplayNameFor(model => model.Recurrence)</dt>
        <dd>@Html.DisplayFor(model => model.Recurrence)</dd>
        <dt>@Html.DisplayNameFor(model => model.Reminders)</dt>
        <dd>@Html.DisplayFor(model => model.Reminders)</dd>
    </dl>
</div>

<div class="btn-group" role="group" aria-label="User actions">
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn " })
    @Html.ActionLink("Delete", "Delete", new { id = Model.ID }, new { @class = "btn " })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn " })
</div>

@model IEnumerable<NewReminderASP.Domain.Entities.PersonalInfo>

@{
    ViewBag.Title = "Info";
}

<h2>Info</h2>

<style>
   
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }
</style>

<table>
    <tr>
        <th>Login</th>
        <th>First Name </th>
        <th>Last Name</th>
        <th>Middle Name</th>
        <th>Birthdate</th>
        <th>Gender</th>
    </tr>
    @foreach (var info in Model)
    {
        <tr>
            <td>@info.Login</td>
            <td>@Html.ActionLink(!string.IsNullOrEmpty(info.FirstName) ? info.FirstName : "Default Name", "Details", "Info", new { login = info.Login }, null)</td>
            <td>@info.LastName</td>
            <td>@info.MiddleName</td>
            <td>@info.Birthdate.ToString("yyyy-MM-dd")</td>
            <td>@info.Gender</td>
        </tr>
    }
</table>
@model NewReminderASP.Domain.Entities.PersonalInfo

@{
    ViewBag.Title = "Delete info";
}
<link href="~/styles.css" rel="stylesheet" />
<h2>Delete info</h2>
<div class="delete-container">
    <p>Are you sure you want to delete this information?</p>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Login)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Login)
        </dd>
    </dl>

    @using (Html.BeginForm("Delete", "Info", new { id = Model.UserID }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this info?');"/>

        </div>
    }
    
</div>

@if (User.IsInRole("Admin"))
{
    <div class="row mt-2">
        <div class="col-md-6">
            @Html.ActionLink("Back", "DetailsAdmin", "User", new { id = Model.UserID, area = "AccountsArea", controller = "User" }, new { @class = "btn btn-details" })
        </div>
        </div>
}
else
{
   
    
    <div class="row mt-2">
        <div class="col-md-6">
            @Html.ActionLink("Back", "Details", "User", new { userName = User.Identity.Name, area = "AccountsArea", controller = "User" }, new { @class = "btn btn-details" })
        </div>
    </div>
}


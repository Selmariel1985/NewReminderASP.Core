@model NewReminderASP.Domain.Entities.Address

@{
    ViewBag.Title = "Delete Address";
}
<link href="~/styles.css" rel="stylesheet" />
<div class="delete-container">

    <h2>Delete Address</h2>
    
    <p>Are you sure you want to delete this user address?</p>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Login)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Login)
        </dd>
    </dl>

    @using (Html.BeginForm("Delete", "Address", new { id = Model.ID }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this addres?');" />

        </div>
    }

</div>

@if (User.IsInRole("Admin"))
{
    <div class="row mt-2">
        <div class="col-md-6">
            @Html.ActionLink("Back", "DetailsAdmin", "User", new { id = Model.UserID, area = "AccountsArea", controller = "User" }, new { @class = "btn btn-secondary" })
        </div>
    </div>

}
else
{
   
    
    <div class="row mt-2">
        <div class="col-md-6">
            @Html.ActionLink("Back", "Details", "User", new { userName = User.Identity.Name, area = "AccountsArea", controller = "User" }, new { @class = "btn btn-secondary" })
        </div>
    </div>
}



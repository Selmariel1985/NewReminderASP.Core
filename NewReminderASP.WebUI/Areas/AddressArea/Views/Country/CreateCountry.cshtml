@model NewReminderASP.Domain.Entities.Country

@{
    ViewBag.Title = "Create New Country"; // More descriptive title
}

<link href="~/styles.css" rel="stylesheet"/>

<div class="create-form">
    <h2>Add Country</h2>

    @using (Html.BeginForm("CreateCountry", "Country", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="countryCode">Country Code:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CountryCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Country Code (e.g. US)" } })
                @Html.ValidationMessageFor(model => model.CountryCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="phoneCode">Phone Code:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PhoneCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Phone Code (e.g. +1)" } })
                @Html.ValidationMessageFor(model => model.PhoneCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="name">Country Name:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Country Name" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Create Country</button>
            </div>
        </div>
    }
</div>

<div class="row mt-2">
    <div class="col-md-6">
        @Html.ActionLink("Back to List", "IndexCountry", null, new { @class = "btn btn-secondary" })
    </div>
</div>
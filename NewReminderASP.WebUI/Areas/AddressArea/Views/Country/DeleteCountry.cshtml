@model NewReminderASP.Domain.Entities.Country

@{
    ViewBag.Title = "Delete Country";
}

<link href="~/styles.css" rel="stylesheet" />
<div class="delete-container">
    <h2>Delete Country</h2>

    <p>Are you sure you want to delete this country?</p>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    @using (Html.BeginForm("DeleteCountry", "Country", new { id = Model.CountryID }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this country?');"/>

        </div>
    }
</div>
<div class="row mt-2">
    <div class="col-md-6">
        @Html.ActionLink("Back to List", "IndexCountry", null, new { @class = "btn btn-secondary" })
    </div>
</div>
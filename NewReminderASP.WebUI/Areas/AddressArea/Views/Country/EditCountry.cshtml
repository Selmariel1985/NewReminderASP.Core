@model NewReminderASP.Domain.Entities.Country


@{
    ViewBag.Title = "Edit Country";
}

<link href="~/styles.css" rel="stylesheet"/>

<div class="edit-container">
    <h2>Edit Country</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="form-group">
            @Html.HiddenFor(model => model.CountryID)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CountryCode, new { @class = "edit-control-label" })
            @Html.EditorFor(model => model.CountryCode, new { htmlAttributes = new { @class = "edit-form-control" } })
            @Html.ValidationMessageFor(model => model.CountryCode, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PhoneCode, new { @class = "edit-control-label" })
            @Html.EditorFor(model => model.PhoneCode, new { htmlAttributes = new { @class = "edit-form-control" } })
            @Html.ValidationMessageFor(model => model.PhoneCode, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "edit-control-label" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "edit-form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-save">Save</button>
        </div>
    }
</div>

<div class="row mt-2">
    <div class="col-md-6">
        @Html.ActionLink("Back to List", "IndexCountry", null, new { @class = "btn btn-secondary" })
    </div>
</div>
@model NewReminderASP.Domain.Entities.Country

@{
    ViewBag.Title = "Country Details";
}

<link href="~/styles.css" rel="stylesheet" />

<h2>Country Details</h2>

<div class="details-details">
    <h4>Country: @Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.CountryCode)</dt>
        <dd>@Html.DisplayFor(model => model.CountryCode)</dd>
        <dt>@Html.DisplayNameFor(model => model.PhoneCode)</dt>
        <dd>@Html.DisplayFor(model => model.PhoneCode)</dd>

    </dl>


    <div class="btn-group" role="group" aria-label="User actions">
        @Html.ActionLink("Edit", "EditCountry", new { id = Model.CountryID }, new { @class = "btn " })
        @Html.ActionLink("Delete", "DeleteCountry", new { id = Model.CountryID }, new { @class = "btn " })
        @Html.ActionLink("Back to List", "IndexCountry", null, new { @class = "btn " })
    </div>
</div>
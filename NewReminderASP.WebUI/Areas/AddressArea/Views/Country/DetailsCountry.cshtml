@model NewReminderASP.Domain.Entities.Country

@{
    ViewBag.Title = "Country Details";
}

<style>

    .country-details {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        max-width: 600px;
    }

    .country-details h2 {
        color: #333;
    }

    .country-details dl {
        display: flex;
        flex-wrap: wrap;
        margin: 0;
        padding: 0;
    }

    .country-details dt {
        flex: 1 1 30%;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .country-details dd {
        flex: 1 1 70%;
        margin-bottom: 5px;
    }

    .country-details hr {
        border: 0;
        border-top: 1px solid #ddd;
        margin: 15px 0;
    }

    .country-details a {
        color: #007bff;
        text-decoration: none;
        margin-right: 10px;
    }
    .btn-group {
        text-align: center;
    }

        .btn-group .btn {
            color: #ffffff;
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-group .btn:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
</style>


<h2>Country Details</h2>

<div class="country-details">
    <h4>Country: @Model.Name</h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.CountryCode)</dt>
        <dd>@Html.DisplayFor(model => model.CountryCode)</dd>
        <dt>@Html.DisplayNameFor(model => model.PhoneCode)</dt>
        <dd>@Html.DisplayFor(model => model.PhoneCode)</dd>
       
    </dl>
</div>

<div class="btn-group" role="group" aria-label="User actions">
    @Html.ActionLink("Edit", "EditCountry", new { id = Model.ID }, new { @class = "btn " })
    @Html.ActionLink("Delete", "DeleteCountry", new { id = Model.ID }, new { @class = "btn " })
    @Html.ActionLink("Back to List", "IndexCountry", null, new { @class = "btn " })
</div>
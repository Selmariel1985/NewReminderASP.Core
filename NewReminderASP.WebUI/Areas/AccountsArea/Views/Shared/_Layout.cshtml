<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <meta name="description" content="Your website description here">
    <meta name="keywords" content="key1, key2, key3">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/styles.css" rel="stylesheet">
</head>
<body>
    <div class="header-bar">
        <div class="info">
            <div class="user-info">
                <i class="fas fa-user-circle"></i> 
                <span>User Login: @Context.User.Identity.Name</span>
            </div>
            <div class="logout-btn">
                <a href="@Url.Action("SignOut", "User")" class="btn btn-eco">
                    <i class="fas fa-sign-out-alt"></i> Logout 
                </a>
            </div>
        </div>
    </div>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-nav">
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">User Management</a>
                <div class="dropdown-menu">
                    <a href="@Url.Action("Index", "User", new { area = "AccountsArea" })" class="dropdown-item">Users</a>
                    <a href="@Url.Action("Create", "User", new { area = "AccountsArea" })" class="dropdown-item">Create User</a>

                    <a href="@Url.Action("Role", "User", new { area = "AccountsArea" })" class="dropdown-item">Roles</a>

                    <a href="@Url.Action("CreateRole", "User", new { area = "AccountsArea" })" class="dropdown-item">Create Role</a>
                    <a href="@Url.Action("CreateUserRoleById", "User", new { area = "AccountsArea" })" class="dropdown-item">Create User Role</a>


                </div>
            </li>

            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Other Management</a>

                <div class="dropdown-menu">

                    <a href="@Url.Action("Index", "Address", new { area = "AddressArea" })" class="dropdown-item">Address</a>
                    <a href="@Url.Action("Index", "Event", new { area = "EventsArea" })" class="dropdown-item">Events</a>
                    <a href="@Url.Action("Index", "Info", new { area = "PersonInfoArea" })" class="dropdown-item">Person Info</a>
                    <a href="@Url.Action("Index", "Phone", new { area = "ContactsArea" })" class="dropdown-item">Phones</a>

                </div>
            </li>
        </div>

    </div>
</nav>

<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer class="footer">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    <script src="~/scripts/bootstrap.bundle.min.js"></script>
</div>
</body>
</html>
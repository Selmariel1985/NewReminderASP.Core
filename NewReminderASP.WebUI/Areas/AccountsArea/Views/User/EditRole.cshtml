@model NewReminderASP.Domain.Entities.Role


@{
    ViewBag.Title = "Edit Role";
}

<link href="~/styles.css" rel="stylesheet" />

<div class="edit-container">
    <h2>Edit Role</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "edit-control-label" })
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "edit-form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>

       

        <div class="form-group">
            <button type="submit" class="btn btn-save">Save</button>
        </div>
    }
</div>

<div class="row mt-2">
    <div class="col-md-6">
        @Html.ActionLink("Back to List", "Role", null, new { @class = "btn-back" })
    </div>
</div>
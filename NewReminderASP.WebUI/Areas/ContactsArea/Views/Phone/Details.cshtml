@model NewReminderASP.Domain.Entities.UserPhone

@{
    ViewBag.Title = "Details";
}

<style>
    .phone-details {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        max-width: 600px;
    }

        .phone-details h2 {
            color: #333;
            text-align: center;
        }

        .phone-details dl {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            margin: 0;
            padding: 0;
        }

        .phone-details dt {
            flex: 1 1 30%;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .phone-details dd {
            flex: 1 1 70%;
            margin-bottom: 5px;
        }

        .phone-details hr {
            border: 0;
            border-top: 1px solid #ddd;
            margin: 15px 0;
        }

        .phone-details a {
            color: #007bff;
            text-decoration: none;
            margin-right: 10px;
        }
    .btn-group {
        text-align: center;
    }

        .btn-group .btn {
            color: #ffffff;
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-group .btn:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
</style>

<div class="phone-details">
    <h2>User Phone Details</h2>

    <div>
        <h4>Phone User: @Model.Login</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Login)</dt>
            <dd>@Html.DisplayFor(model => model.Login)</dd>

            <dt>@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
            <dd>@Html.DisplayFor(model => model.PhoneNumber)</dd>

            <dt>@Html.DisplayNameFor(model => model.PhoneTypes)</dt>
            <dd>@Html.DisplayFor(model => model.PhoneTypes)</dd>

            <dt>@Html.DisplayNameFor(model => model.CountryName)</dt>
            <dd>@Html.DisplayFor(model => model.CountryName)</dd>
        </dl>
    </div>

    <div class="btn-group" role="group" aria-label="User actions">
        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn " })
        @Html.ActionLink("Delete", "Delete", new { id = Model.ID }, new { @class = "btn " })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn " })
    </div>
</div>
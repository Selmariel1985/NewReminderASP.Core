@model NewReminderASP.Domain.Entities.PhoneType

@{
    ViewBag.Title = "Details PhoneType";
}

<style>
    .phoneType-details {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        max-width: 600px;
    }

        .phoneType-details h2 {
            color: #333;
            text-align: center;
        }

        .phoneType-details dl {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            margin: 0;
            padding: 0;
        }

        .phoneType-details dt {
            flex: 1 1 30%;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .phoneType-details dd {
            flex: 1 1 70%;
            margin-bottom: 5px;
        }

        .phoneType-details hr {
            border: 0;
            border-top: 1px solid #ddd;
            margin: 15px 0;
        }

        .phoneType-details a {
            color: #007bff;
            text-decoration: none;
            margin-right: 10px;
        }
    .btn-group {
        text-align: center;
    }

        .btn-group .btn {
            color: #ffffff;
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-group .btn:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
</style>

<div class="phoneType-details">
    <h2>User Phone Type Details</h2>

    <div>
        <h4>Phone Type : @Model.ID</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.TypeName)</dt>
            <dd>@Html.DisplayFor(model => model.TypeName)</dd>

            
        </dl>
    </div>

  
    <div class="btn-group" role="group" aria-label="User actions">
        @Html.ActionLink("Edit", "EditPhoneType", new { id = Model.ID }, new { @class = "btn " })
        @Html.ActionLink("Delete", "DeletePhoneType", new { id = Model.ID }, new { @class = "btn " })
        @Html.ActionLink("Back to List", "GetPhoneType", null, new { @class = "btn " })
    </div>
</div>
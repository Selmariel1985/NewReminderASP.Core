@model NewReminderASP.Domain.Entities.UserPhone

@{
    ViewBag.Title = "Delete User Phone";
}

<link href="~/styles.css" rel="stylesheet" />
<div class="delete-container">
    <h2>Delete User Phone</h2>
    <h4>Phone number: @Model.PhoneNumber</h4>
    <p>Are you sure you want to delete this phone?</p>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Login)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Login)
        </dd>
    </dl>

    @using (Html.BeginForm("Delete", "Phone", new { id = Model.ID }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this phone?');"/>

        </div>
    }
</div>

@if (User.IsInRole("Admin"))
{
    <div class="row mt-2">
        <div class="col-md-6">
            @Html.ActionLink("Back", "DetailsAdmin", "User", new { id = Model.UserID, area = "AccountsArea", controller = "User" }, new { @class = "btn btn-danger" })
        </div>
    </div>

}
else
{
   
    
    <div class="row mt-2">
        <div class="col-md-6">
            @Html.ActionLink("Back", "Details", "User", new { userName = User.Identity.Name, area = "AccountsArea", controller = "User" }, new { @class = "btn btn-secondary" })
        </div>
    </div>
}


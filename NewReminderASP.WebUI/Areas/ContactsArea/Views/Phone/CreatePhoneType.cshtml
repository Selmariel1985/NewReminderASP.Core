@model NewReminderASP.Domain.Entities.PhoneType
@{
    ViewBag.Title = "Create User PhoneType";
}

<link href="~/styles.css" rel="stylesheet" />
<div class="create-form">
    <h2>Add Phone</h2>

    @using (Html.BeginForm("CreatePhoneType", "Phone", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        
            <h4>Crete PhoneType</h4>
            


            <div class="form-group">
                @Html.LabelFor(model => model.TypeName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TypeName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Your Phone Type" } })
                    @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">Create Type Phone</button>
                </div>
            </div>
    }
</div>

<div class="row mt-2">
    <div class="col-md-6">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
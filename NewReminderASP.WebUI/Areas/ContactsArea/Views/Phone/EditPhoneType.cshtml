@model NewReminderASP.Domain.Entities.PhoneType

@{
    ViewBag.Title = "Edit User Phone Type";
}

<
<link href="~/styles.css" rel="stylesheet"/>
<div class="edit-container">
    <h4>Phone User: @Model.ID</h4>

    @using (Html.BeginForm())
    {
        <hr/>
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.TypeName, new { @class = "edit-control-label" })
            @Html.EditorFor(model => model.TypeName, new { htmlAttributes = new { @class = "edit-form-control" } })
            @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-save"/>
        </div>
    }
</div>

<div class="row mt-2">
    <div class="col-md-6">
        @Html.ActionLink("Back to List", "GetPhoneType", null, new { @class = "btn-back" })
    </div>
</div>
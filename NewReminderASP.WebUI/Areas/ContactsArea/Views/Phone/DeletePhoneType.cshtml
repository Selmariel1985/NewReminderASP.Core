@model NewReminderASP.Domain.Entities.PhoneType

@{
    ViewBag.Title = "Delete User Phone";
}

<h2>Delete User Phone Type</h2>
<h4>Phone Type ID: @Model.TypeName</h4>
<p>Are you sure you want to delete this phone type?</p>

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.TypeName)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.TypeName)
    </dd>
</dl>

@using (Html.BeginForm("DeletePhoneType", "Phone", new { id = Model.ID }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-actions">
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this phone type?');"/>
        @Html.ActionLink("Back to List", "GetPhoneType")
    </div>
}